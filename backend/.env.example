# TempMail Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/tempmail
MONGODB_TEST_URI=mongodb://localhost:27017/tempmail_test

# Email Configuration
EMAIL_DOMAIN=temp-mail.local
EMAIL_EXPIRY_HOURS=1
SMTP_PORT=2525

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cleanup Configuration
CLEANUP_INTERVAL_MINUTES=5
MAX_MESSAGES_PER_EMAIL=50

# CORS Configuration
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Mock Email Configuration (for development)
MOCK_EMAIL_ENABLED=true
WEBHOOK_URL=http://localhost:3000/api/webhook/email
